{
    "manifest_version": 3,
    "version": "1.0.0",
    "name": "Focus Hoot",
    "description": "Block content that distractes you, using our productivity manager.",
    "action": {
        "default_popup": "popup.html",
        "default_icon": "./icons/favicon-32x32.png"
    },
    "icons": {
        "16": "./icons/favicon-16x16.png",
        "32": "./icons/favicon-32x32.png",
        "192": "./icons/android-chrome-192x192.png",
        "512": "./icons/android-chrome-512x512.png"
    },
    "host_permissions": [
        "https://www.youtube.com/*"
    ],
    "permissions": [
        "storage",
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/*"
            ],
            "js": [
                "./youtube/content.js"
            ]
        }
    ]
}
